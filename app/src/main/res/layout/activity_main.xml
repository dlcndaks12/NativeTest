<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#323640">
        <!--app:menu="@menu/activity_main_drawer"-->
        <!--app:itemTextColor="#8e957"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- ABOUT COSCOI -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingTop="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp">

                    <ImageView
                        android:id="@+id/iconTitle1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_menutitle1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/iconTitle1"
                        android:gravity="center_vertical"
                        android:text="@string/navtitle1"
                        android:textColor="@color/navtitle_color"
                        android:textSize="@dimen/navtitle_size" />
                </RelativeLayout>

                <Button
                    android:id="@+id/menuWhoweare"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingLeft="40dp"
                    android:text="@string/navmenu1_1"
                    android:textColor="@color/navvalue_color"
                    android:textSize="@dimen/navvalue_size" />

                <Button
                    android:id="@+id/menuHistory"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingLeft="40dp"
                    android:text="@string/navmenu1_2"
                    android:textColor="@color/navvalue_color"
                    android:textSize="@dimen/navvalue_size" />

                <Button
                    android:id="@+id/menuLocation"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingLeft="40dp"
                    android:text="@string/navmenu1_3"
                    android:textColor="@color/navvalue_color"
                    android:textSize="@dimen/navvalue_size" />
            </LinearLayout>

            <!-- BUSINESS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/nav_border"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingTop="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp">

                    <ImageView
                        android:id="@+id/iconTitle2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_menutitle2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/iconTitle2"
                        android:gravity="center_vertical"
                        android:text="@string/navtitle2"
                        android:textColor="@color/navtitle_color"
                        android:textSize="@dimen/navtitle_size" />
                </RelativeLayout>

                <Button
                    android:id="@+id/menuCharacter"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingLeft="40dp"
                    android:text="@string/navmenu2_1"
                    android:textColor="@color/navvalue_color"
                    android:textSize="@dimen/navvalue_size" />

                <Button
                    android:id="@+id/menuWeb"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingLeft="40dp"
                    android:text="@string/navmenu2_2"
                    android:textColor="@color/navvalue_color"
                    android:textSize="@dimen/navvalue_size" />

                <Button
                    android:id="@+id/menu3D"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingLeft="40dp"
                    android:text="@string/navmenu2_3"
                    android:textColor="@color/navvalue_color"
                    android:textSize="@dimen/navvalue_size" />

                <Button
                    android:id="@+id/menuHealth"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingLeft="40dp"
                    android:text="@string/navmenu2_4"
                    android:textColor="@color/navvalue_color"
                    android:textSize="@dimen/navvalue_size" />

                <Button
                    android:id="@+id/menuSmart"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingLeft="40dp"
                    android:text="@string/navmenu2_5"
                    android:textColor="@color/navvalue_color"
                    android:textSize="@dimen/navvalue_size" />
            </LinearLayout>

            <!-- PR CENTER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/nav_border"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingTop="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp">

                    <ImageView
                        android:id="@+id/iconTitle3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_menutitle3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/iconTitle3"
                        android:gravity="center_vertical"
                        android:text="@string/navtitle3"
                        android:textColor="@color/navtitle_color"
                        android:textSize="@dimen/navtitle_size" />
                </RelativeLayout>

                <Button
                    android:id="@+id/menuNotice"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingLeft="40dp"
                    android:text="@string/navmenu3_1"
                    android:textColor="@color/navvalue_color"
                    android:textSize="@dimen/navvalue_size" />

                <Button
                    android:id="@+id/menuRecruit"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingLeft="40dp"
                    android:text="@string/navmenu3_2"
                    android:textColor="@color/navvalue_color"
                    android:textSize="@dimen/navvalue_size" />
            </LinearLayout>
        </LinearLayout>
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
