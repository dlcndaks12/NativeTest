<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.almond.nativetest.DetailViewActivity">

    <TextView
        android:id="@+id/viewHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:gravity="center"
        android:text="NOTICE"
        android:background="#535c65"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@drawable/spinner_border">

        <TextView
            android:id="@+id/viewType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="공지"
            android:textColor="#44c7eb"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/viewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="16dp"
            android:textColor="#444"
            android:textStyle="bold"
            android:text="[코스코이] 제주 지사 설립 확정"/>

        <TextView
            android:id="@+id/viewDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#b3b1b1"
            android:text="2016.05.29"
            android:textSize="16dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:id="@+id/viewArticle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textSize="16dp"
        android:background="@drawable/spinner_border"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="25dp"
        android:paddingLeft="15dp"
        android:background="#fff"
        android:gravity="right">

        <Button
            android:id="@+id/btnList"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:textSize="16dp"
            android:background="@drawable/btn_border"
            android:text="목록"/>
    </LinearLayout>

    <include layout="@layout/footer"/>

</LinearLayout>
