<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.almond.nativetest.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/header_border">

            <ImageButton
                android:id="@+id/btnTrigger"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/icon_nav_toggler" />

            <ImageButton
                android:id="@+id/btnHome"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"
                android:src="@drawable/logo" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/mainScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header"
            android:fillViewport="true">

            <!--<include
                android:id="@+id/contents"
                layout="@layout/content_main" />-->

            <ViewFlipper
                android:id="@+id/vf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:measureAllChildren="false">
                <include android:id="@+id/content_main" layout="@layout/content_main"/>
                <include android:id="@+id/content_whoweare" layout="@layout/content_whoweare"/>
                <include android:id="@+id/content_history" layout="@layout/content_history"/>
            </ViewFlipper>

        </ScrollView>

        <!--<include layout="@layout/content_main" />-->
    </RelativeLayout>



</android.support.design.widget.CoordinatorLayout>
