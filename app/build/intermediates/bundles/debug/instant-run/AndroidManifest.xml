<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.almond.nativetest"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar" >
        <activity
            android:name="com.almond.nativetest.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.almond.nativetest.WhoweareActivity" />
        <activity android:name="com.almond.nativetest.HistoryActivity" />
        <activity android:name="com.almond.nativetest.LocationActivity" />
        <activity android:name="com.almond.nativetest.CharacterActivity" />
        <activity android:name="com.almond.nativetest.WebActivity" />
        <activity
            android:name="com.almond.nativetest.PrintingActivity"
            android:hardwareAccelerated="false" />
        <activity android:name="com.almond.nativetest.HealthActivity" />
        <activity
            android:name="com.almond.nativetest.SmartToyActivity"
            android:hardwareAccelerated="false" />
        <activity android:name="com.almond.nativetest.NoticeActivity" />
        <activity android:name="com.almond.nativetest.RecruitActivity" />
        <activity android:name="com.almond.nativetest.DetailViewActivity" />
        <activity android:name="com.almond.nativetest.PortfolioDetailActivity" />
    </application>

</manifest>